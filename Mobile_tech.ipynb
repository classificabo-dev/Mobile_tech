# ğŸ”¹ AnÃ¡lise de palavras-chave em 'pros' e 'cons'
from collections import Counter

def split_keywords(series):
    keywords = []
    for item in series.dropna():
        item = item.replace('\t', ',').replace(';', ',')
        keywords.extend(item.split(','))
    return [kw.strip() for kw in keywords if kw.strip()]

pros_keywords = split_keywords(df['pros'])
cons_keywords = split_keywords(df['cons'])

pros_count = Counter(pros_keywords)
cons_count = Counter(cons_keywords)

pros_df = pd.DataFrame(pros_count.items(), columns=['Feature', 'Count']).sort_values(by='Count', ascending=False)
cons_df = pd.DataFrame(cons_count.items(), columns=['Feature', 'Count']).sort_values(by='Count', ascending=False)

# ğŸ”¹ GrÃ¡fico: CaracterÃ­sticas positivas
plt.figure(figsize=(8, 12))
sns.barplot(data=pros_df, x='Count', y='Feature', palette='Greens_d')
plt.title('CaracterÃ­sticas Positivas Mais Citadas')
plt.xlabel('FrequÃªncia')
plt.ylabel('CaracterÃ­sticas')
plt.tight_layout()
plt.show()

# ğŸ”¹ GrÃ¡fico: CaracterÃ­sticas negativas
plt.figure(figsize=(8, 9))
sns.barplot(data=cons_df, x='Count', y='Feature', palette='Reds_d')
plt.title('CaracterÃ­sticas Negativas Mais Citadas')
plt.xlabel('FrequÃªncia')
plt.ylabel('CaracterÃ­sticas')
plt.tight_layout()
plt.show()
